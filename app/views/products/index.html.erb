<h1>商品一覧ページ</h1>
<div id="products">
    <% @products.each do |product| %>
        <p>
            <strong>商品ID:</strong>
            <%= product.id %><br>
            
            <strong>商品名:</strong>
            <%= product.name %><br>
            
            <strong>値段:</strong>
            <%= product.price %>円<br>
            
        <%= button_to "この商品を削除", product, method: :delete %>
        <%= button_to "この商品をカートに追加", {controller: 'cart_items', action: 'new'}, {method: :post, params: {id: product.id, name: product.name, price: product.price}} %>
        </p>
    <% end %>
</div>

<%= button_to "商品を追加する", {controller: 'products', action: 'create'}, method: :post %>
<%= button_to "カートを見る", {controller: 'carts', action: 'show'}, method: :post %>